<% content_for :title, "Editing friend" %>

<h1>Editing friend</h1>

<br/>

<%= render "form", friend: @friend %>

<br>
<div style="display: flex; gap: 10px;">
  <%= link_to "Show this friend", @friend, class:"btn btn-dark" %>
  <%= button_to "Delete", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
</div>